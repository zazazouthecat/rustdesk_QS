#!/bin/bash

set -e

case $1 in
    remove|upgrade)
		INITSYS=$(ls -al /proc/1/exe | awk -F' ' '{print $NF}' | awk -F'/' '{print $NF}')
		if [ "systemd" == "${INITSYS}" ]; then
			systemctl stop rustdesk || true
			systemctl disable rustdesk || true
			rm /etc/systemd/system/rustdesk.service || true
		fi
        ;;
esac

exit 0
